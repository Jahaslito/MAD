<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bookmark_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/bookmark_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookmark_title"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_toEndOf="@id/bookmark_image"/>

        <TextView
            android:id="@+id/bookmark_article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/article_author"
            android:textSize="14sp"
            android:textColor="@color/primaryTextColor"
            android:layout_toEndOf="@id/bookmark_image"
            android:layout_below="@id/bookmark_article_title"/>

<!--        <TextView-->
<!--            android:id="@+id/bookmark_article_description"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="@string/article_description"-->
<!--            android:textSize="12sp"-->
<!--            android:textColor="@color/black"-->
<!--            android:layout_toEndOf="@id/bookmark_image"-->
<!--            android:layout_below="@id/bookmark_article_author"/>-->



    </RelativeLayout>

</androidx.cardview.widget.CardView>